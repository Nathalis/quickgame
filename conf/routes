# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
# Display landing page for a game
GET     /:game                  controllers.Application.gameIndex(game: GameType)
# Create a new game
GET     /:game/new              controllers.Application.newGame(game: GameType)
# Display a single game
GET     /:game/:id              controllers.Application.game(game: GameType, id, username: Option[String])
# Websocket stream
GET     /ws/:game/:id                controllers.Application.socket(game: GameType, id, username)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
