# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
# Display landing page for a game
GET     /:game                  controllers.Application.gameIndex(game: models.GameType)
# Create a new game
GET     /:game/new              controllers.Application.newGame(game: models.GameType)
# Display a single game
GET     /:game/:id              controllers.Application.game(game: models.GameType, id, username: Option[String])
# Websocket stream
GET     /:game/:id/stream       controllers.Application.stream(game: models.GameType, id, username)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
